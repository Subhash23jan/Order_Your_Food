<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0FA2B5"
    tools:context=".profilemanagement.SignUpFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/EditextEmail"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginStart="80dp"
            android:inputType="textEmailAddress"
            android:layout_marginTop="250dp"
            android:fontFamily="@font/langar"
            android:hint="@string/enter_your_email"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />
        <EditText
            android:id="@+id/Editextpassword"
            android:hint="@string/enter_your_password"
            android:layout_marginStart="80dp"
            android:layout_marginTop="300dp"
            android:fontFamily="@font/langar"
            android:layout_width="250dp"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:layout_height="50dp"
            android:autofillHints="" />
        <Button
            android:layout_width="wrap_content"
            android:id="@+id/signUpBtn"
            android:textAllCaps="false"
            android:text="Sign up"
            android:layout_marginStart="160dp"
            android:layout_marginTop="360dp"
            android:backgroundTint="#D81818"
            android:fontFamily="@font/langar"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/signupWithGoogleBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="100dp"
            android:layout_marginTop="464dp"
            android:backgroundTint="#2E98EC"
            android:drawableEnd="@drawable/googleimage"
            android:fontFamily="@font/langar"
            android:text="Sign up with google "
            android:textSize="13sp" />

        <TextView
            android:id="@+id/forgotpassword"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="361dp"
            android:layout_marginEnd="5dp"
            android:fontFamily="@font/courgette"
            android:text="Forgot password"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Olduser"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="359dp"
            android:fontFamily="@font/courgette"
            android:text="Have a account"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>
</FrameLayout>