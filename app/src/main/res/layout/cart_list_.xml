<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    tools:context=".cartmanagement.CartPageActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/CartCardView"
            android:backgroundTint="#095E68"
            android:layout_width="match_parent"
            android:layout_height="140dp">

            <ImageView
                android:id="@+id/foodCartImage"
                android:layout_margin="10dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="foodcartImage" />

            <TextView
                android:id="@+id/CartFoodName"
                android:layout_width="140dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:fontFamily="@font/amarante"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:layout_marginTop="10dp"
                android:layout_marginStart="200dp"
                android:text="fooname" />

            <TextView
                android:id="@+id/foodCartPrice"
                android:layout_width="141dp"
                android:fontFamily="@font/amarante"
                android:layout_height="wrap_content"
                android:layout_marginStart="200dp"
                android:layout_marginTop="40dp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:textSize="16sp"
                android:text="food price" />

            <TextView
                android:id="@+id/BtnCartRemove"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginStart="150dp"
                android:layout_marginTop="75dp"
                android:background="#C6094A"
                android:clickable="true"
                android:paddingStart="10sp"
                android:paddingTop="1dp"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="40sp"
                app:drawableStartCompat="@drawable/baseline_horizontal_rule_24" />

                <TextView
                    android:id="@+id/foodCartCounts"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="190dp"
                    android:layout_marginTop="75dp"
                    android:background="#0C70BF"
                    android:clickable="true"
                    android:text="15"
                    android:paddingTop="1dp"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="18sp" />

            <TextView
                android:id="@+id/BtnCartAdd"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginStart="240dp"
                android:layout_marginTop="75dp"
                android:background="#51DACD"
                android:clickable="true"
                android:text="+"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="23sp" />
            <Button
                android:id="@+id/buyThisOnly"
                android:text="Buy this Now"
                android:textSize="12sp"
                android:fontFamily="@font/courgette"
                android:textAllCaps="false"
                android:layout_marginStart="300dp"
                android:layout_marginTop="65dp"
                android:backgroundTint="#009688"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

</RelativeLayout>